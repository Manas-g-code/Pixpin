</head>

<body>
  <div class="navm">
    <div class="box">
      <h3><span class="pix">PIXPIN</span></h3>
    </div>
    <div class="try">
      
    </div>
    <a class="p" href="/profile">Profile</a>
    <a class="f" href="/feed">Feed</a>
    <a class="addnewPost" href="/add">Create</a>
    <a class="l" href="/logout">Logout</a>
  </div>

  <div class="container">
    <!-- <div class="row"> -->
    <div class="left-side">
      <!-- <h2>
          <%= post.imageTitle %>
        </h2>
        <p>
          <%= post.imageDesc %>
        </p> -->
      <a href="/images/uploads/<%= post.image %>" target="_blank">
        <i class="ri-arrow-right-up-line"></i>
      </a>

      <img src="/images/uploads/<%= post.image %>" alt="<%= post.imageTitle %>">
    </div>
    <div class="right-side">
      <h2>
        <%= post.imageTitle %>
      </h2>
      <div class="fordesc">
        <p class="forp" >
          <%= post.imageDesc %>
        </p>
      </div>
      <div class="udet">
        <div class="pp">
          <img src="/images/uploadsP/<%= post.users.dp %>">
        </div>
        <div class="h5h6">
          <h5 class="h5card">
            <%= post.users.fullname %>
          </h5>
          <h6 class="h6card">@<%= post.users.username %>
          </h6>
        </div>
      </div>
      <div class="cmt">

        <div class="boxcomm">
          <h3><span class="comt"></span></h3>
        </div>

        <div class="cmtpp">
          <% comments.forEach(function(comment) { %>
            <div class="cmtbox">
              <div class="cpp">
                <img src="/images/uploadsP/<%= comment.users.dp %>">
              </div>
              <p class="p1"><strong>
                  <%= comment.users.username %>:
                </strong></p>
              <p class="p2c">
                <%= comment.content %>
              </p>
              <form action="/comments/<%= comment._id %>/delete" method="post">
                <button type="submit">
                  <i class="ri-chat-delete-fill"></i>
                </button>
              </form>


            </div>
            <% }) %>
        </div>


        <div class="cmttype">
          <form class="comment-form mt-3" action="/posts/<%= post._id %>/comments" method="post">
            <div class="form-group">
              <p>
                <%= comments.length %> Comments
              </p>
              <div class="ppcmt">
                <div class="selfpp">
                  <% comments.forEach(function(here) { %>

                    <img src="/images/uploadsP/<%= here.users.dp %>">

                    <% }) %>

                </div>

                <input type="text" placeholder="Add Comment" class="form-control" name="content" rows="3"
                  required><button type="submit"><i class="ri-send-plane-2-fill"></i></button></input>

              </div>
            </div>
          </form>

        </div>


      </div>

      <!-- <h2>Comments</h2> -->
      <!-- <form class="comment-form mt-3" action="/posts/<%= post._id %>/comments" method="post">
          <div class="form-group">
            <textarea class="form-control" name="content" rows="3" required></textarea>
          </div>
          <button type="submit" class="btn btn-primary mt-2">Add Comment</button>
        </form> -->

      <!-- <div class="comments-container"> -->
      <!-- <p>Number of comments: <%= comments.length %></p> -->
